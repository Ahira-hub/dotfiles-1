[module/pomo]
	type = custom/script
	interval = 1
	exec = pomo status | awk '{print substr($3,1,6)}' | grep -o '[0-9]\+' | sed 'N;s/\n/ : /'
	label = "  %output%"
	format-foreground = ${colors.primary}


