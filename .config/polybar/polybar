[colors]
	accent = #EDD080
	bckgrd = #121212
	select = #161A1B

	background = 			${self.bckgrd}
	background-alt = 		${self.select}
	foreground = 			#A5ffffff
	primary = 			${self.accent}
	alert = 			#bd2c40
	white = 			#FFFFFF
    grey =              #AAAAAA
	transparent = 			#00000000


[global/wm]
	margin-top = 5
	margin-bottom = 0


[settings]
	throttle-output = 5
	throttle-output-for = 10
	throttle-input-for = 30
	screenchange-reload = true
	bargapp= 10
	barwidth = 100%
	barheigh = 48


[bar/top]
	monitor = ${env:MONITOR}
	monitor-strict = true
	fixed-center = true
	dpi = 96
	bottom = false
	width = ${settings.barwidth}
	height = ${settings.barheigh}
