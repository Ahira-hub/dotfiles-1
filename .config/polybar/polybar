	foreground = ${colors.foreground}
	overline-size = 0
	overline-color = #f00
	underline-size = 2
	underline-color = #00f
	border-top-size = ${settings.bargapp}
	border-left-size = ${settings.bargapp}
	border-right-size = ${settings.bargapp}
	border-bottom-size = 0
	border-color = ${colors.transparent}
	radius-top = 10
	radius-bottom = 10
	spacing = 2
	padding-left = 2
	padding-right = 2
