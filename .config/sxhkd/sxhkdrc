alt + space
    bash ~/.config/rofi/menu/SEARCH
super + alt + {Escape,Delete,Insert}
    bash ~/.config/rofi/menu/{system,CONFIG,screenshot}
super + space
    bash ~/.config/rofi/menu/BROWSE
super + alt + space; {n,f,s,c,Return,q,v}
    {nautilus,firefox,sakura,code,kitty,qutebrowser,virt-manager}

{super,alt} + Escape
    bspc node -{c,k}
{super,alt} + Delete
    pkill -USR1 -x sxhkd && ~/.startup -r

{dead_acute,dead_circumflex}
    termop {NOTE 3500 1900,MAIN 2500 1050}

mod3 + {Left,Right}
    {echo "seek -10" > /home/bresilla/.config/mpv/control, echo "seek 10" > /home/bresilla/.config/mpv/control}
mod3 + mode_switch + {Left,Right}
    {echo "playlist_prev" > /home/bresilla/.config/mpv/control, echo "playlist_next" > /home/bresilla/.config/mpv/control}
mode_switch + {Left,Right}
    {echo "seek -10" > /home/bresilla/.config/mpv/control, echo "seek 10" > /home/bresilla/.config/mpv/control}
{mode_switch, mod3} + space
    echo "cycle pause" > /home/bresilla/.config/mpv/control

super + XF86Audio{Prev,Next}
    mpc seekthrough {-10,+10}
XF86Audio{Prev,Next,Play}
    mpc -q {prev,next,toggle} & playerctl {previous,next,play-pause}
XF86Audio{Raise,Lower}Volume
    pulsemixer --change-volume {+,-}5
XF86AudioMute
    pulsemixer --toggle-mute
XF86MonBrightness{Up,Down}
    light -{A,U} 5

#mode_switch + Return
#mod3 + Return

super + alt + {Left,Right}
    bspc desktop -f {prev,next}.local
super + alt + {Down,Up}
    bspc monitor -f {prev,next}
{super,alt} + @button{6,5,4,7}
    /home/bresilla/.config/bspwm/scripts/{focus,move} {west,south,north,east}
{super,alt} + {Left,Down,Up,Right}
    /home/bresilla/.config/bspwm/scripts/{focus,move} {west,south,north,east}
{super+alt} + ctrl + @button{6,5,4,7}
    /home/bresilla/.config/bspwm/scripts/resize {Left,Down,Up,Right}
{super+alt} + ctrl + {Left,Down,Up,Right}
    /home/bresilla/.config/bspwm/scripts/resize {Left,Down,Up,Right}

{super+alt} + shift + {Left,Right}
    bspc node -d {prev,next} --follow
{super+alt} + shift + {Down,Up}
    bspc node -m {prev,next} --follow

{super,alt,alt+super} + Return
    bspc node -t ~{fullscreen,floating,tiled}
{super,alt,alt+super} + BackSpace
    bspc node -g {locked,private,sticky}
