load=/home/trim
save=/home/trim/dotfiles

update(){
	sudo apt update
}
upgrade(){
	sudo apt upgrade
}
autoremove(){
	sudo apt autoremove
}
clean(){
	sudo apt clean
}

#headphones(){pacmd set-sink-port 0 analog-output-headphones}
#speaker(){pacmd set-sink-port 0 analog-output-speaker}

syncup(){
	bash syncup
}

syncdown(){
	rsync -r -t -v --progress -s $save/ ~/
}

sourceup(){
	rsync -r -t -v --progress -s /etc/apt/ $save/.sources/
}

sourcedown(){
	sudo rsync -r -t -v --progress -s $save/sources/ /etc/apt/
}

accent(){
	sed -i "1s/.*/*accent:    ""#$1/" ~/.Xdefaults && xrdb -load ~/.Xdefaults && i3-msg restart
}


