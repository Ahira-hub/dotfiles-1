weather(){
	curl wttr.in
}

setwall(){
	wget -O /tmp/wallpaper.jpg https://source.unsplash.com/3840x2160/?nature
	feh --bg-fill /tmp/wallpaper.jpg
}

banner(){
	toilet "$1" | lolcat
}

wisdom(){
	fortune | cowsay -f tux | lolcat
}

matrix(){
	cmatrix | lolcat
}

dotshot(){
	scr=/home/bresilla/Dots/.assets/.shoots/$1.png && \
	scrot -d 10 $scr && \
	convert $scr -gravity East -chop 1920x0 $scr
}
