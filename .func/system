alias s='sudo -E '
alias :q='exit'
alias v='sudo -E nvim'
alias up="sudo -S systemctl"
alias clip='xclip -sel clip'
alias suspend='systemctl suspend'

#ALTERNATIVES
alias vim='nvim'
alias mutt='neomutt'

#PACKAGE_MANAGER
alias pack='yay'
alias mirror="sudo pacman-mirrors --fasttrack 5 && sudo pacman -Syyu"
function branch(){ sudo pacman-mirrors --api -S $@ && mirror; }

#WM
alias refresh='pkill -USR1 -x sxhkd && bash ~/.startup -r'
alias dotfile='/usr/bin/git --git-dir=$HOME/Dots --work-tree=$HOME'

#SYSTEM
alias cp='acp -g -r'
alias mv='amv -g -u'
alias rm='rm -rf'
alias rn='mv -v'

alias md='mkdir -p'
alias mf='touch'
function ma(){ mkdir -p "$(dirname "$1")" && touch "$1"; }

alias ls='exa -F'
alias ll='exa -liSHF --header --git --group-directories-first --tree -L1'
alias la='exa -laiSHF --header --git --group-directories-first --tree -L1'
alias lt='exa -liSHF --header --git --tree -L2'
alias lu='dutree -d1 --usage -x .git -x .direnv'

alias df='dfc -dTomi'
alias lsblk='lsblk -f'
alias dd='dd status=progress'
alias z='sudo ncdu --color=dark --exclude /home/bresilla/DATA'

