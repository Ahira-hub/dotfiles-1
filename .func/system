#PACKET
alias copy='xclip -sel clip'
alias :q='exit'
alias pack='yay'
alias sudo='sudo -E '
alias cp='acp -gr'
alias mv='acp -gr'
alias s='shko -c --short 19 && cd "$(cat ~/.config/shko/settings/chdir)"'
mirror(){sudo pacman-mirrors --fasttrack 5 && sudo pacman -Syyu}
branch(){sudo pacman-mirrors --api --set-branch $@ && mirror}

alias suspend='up suspend'
alias refresh='pkill -USR1 -x sxhkd && bash ~/.startup -r'
alias configs='vim $(find /home/bresilla/Dots/ -type f | fzf)'

man() {
    LESS_TERMCAP_mb=$'\e'"[1;31m" \
    LESS_TERMCAP_md=$'\e'"[1;31m" \
    LESS_TERMCAP_me=$'\e'"[0m" \
    LESS_TERMCAP_se=$'\e'"[0m" \
    LESS_TERMCAP_so=$'\e'"[1;44;33m" \
    LESS_TERMCAP_ue=$'\e'"[0m" \
    LESS_TERMCAP_us=$'\e'"[1;32m" \
    command man "$@" }

setx(){
    eval "$(echo "sudo systemctl set-default graphical.target\nsudo systemctl set-default multi-user.target" | fzf)" }

#SYSTEM
alias ls='lsd -F'
alias ll='lsd -lF'
alias la='lsd -laF'
alias rm='rm -r'
alias df='df -h'

alias z='ncdu --color=dark'
alias mutt='neomutt'
alias vim='nvim'
alias v='nvim'
alias e='emacs -nw'
alias mac='emacs -nw'
alias c='bat'
alias less='slit'
alias l='slit'
alias m='man'
alias g='rg -i'

up() {
    cat $PASS | sudo -S systemctl $@ }

blue(){
        cat $PASS | sudo -S sudo hciconfig hci0 up}

##FILES
alias own='suda chown -R $USER'
alias exe='chmod +x'
alias dxe='chmod -x'

##PROGRAMS
alias docker=supdock
alias fzp='fzf --preview="head -$LINES {}"'
alias ari=aria2c


##HISTORY
history(){
    tac /home/bresilla/.config/zsh_history | fzy
}
delete(){
    name=$(tac /home/bresilla/.config/zsh_history | fzy)
    [[ -n $name ]] && LC_ALL=C sed -i "/$name/d" $HISTFILE
}


#OTHER
run(){
    nohup $1 > /dev/null 2>&1 &! }

open(){
    nohup mimeo $1 > /dev/null 2>&1 &! }

note(){
    nvim $(notes list | fzp)
}

phone(){
    sshfs -p 1234 bresilla@$1:/storage/emulated/0 /home/bresilla/OnePlus }

rofit(){
    rofi -theme $HOME/.config/rofi/rofi_bar -theme-str "*{accent: ${FOREGROUND:-#000000};}" -dmenu -i -p '>>>'
}

batt(){
    upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep -E "state|to\ full|percentage|time"
}

search(){
    rg $@
}

replace(){
    rg -l $1 | xargs sed -i "s/$1/$2/g" *
}
