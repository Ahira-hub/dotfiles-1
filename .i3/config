############################################################################################################
#											SCRATCHPAD
############################################################################################################
set $term urxvt -name term -fn "xft:Noto Mono for Powerline:size=12" -e tmuxp load ~/.tmux/term.yaml -y
for_window [instance="term"] floating enable
for_window [instance="term"] resize set 1680 700
for_window [instance="term"] move position center
for_window [instance="term"] move scratchpad
for_window [instance="term"] border pixel 0
exec --no-startup-id $term
bindsym $mod+$alt+$crcum exec $term
bindsym $crcum [instance="term"] scratchpad show; move position center

set $note urxvt -name note -fn "xft:Noto Mono for Powerline:size=12"  -e tmuxp load ~/.tmux/note.yaml -y
for_window [instance="note"] floating enable
for_window [instance="note"] resize set 1680 700
for_window [instance="note"] move position center
for_window [instance="note"] move scratchpad
for_window [instance="note"] border pixel 0
exec --no-startup-id $note
bindsym $mod+$alt+$acute exec $note
bindsym $acute [instance="note"] scratchpad show; move position center



