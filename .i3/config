############################################################################################################
#											MODIFIERS
############################################################################################################
exec xmodmap -e 'remove control = Control_R'
exec xmodmap -e 'add Mod3 = Control_R'
exec xmodmap -e "clear lock"
exec xmodmap -e "keysym Caps_Lock = Escape"

set $mod mod4
set $alt mod1
set $esc Escape
set $ctl Control
set $ctr mod3
set $alg mod5

set $crcum dead_circumflex
set $acute dead_acute

# Use Mouse+$mod to drag floating windows
floating_modifier $mod



############################################################################################################
#											COLORS
############################################################################################################
