############################################################################################################
#											SCRATCHPAD
############################################################################################################
set $term1 urxvt -name term1 -fn "xft:Noto Mono for Powerline:size=14" -e tmuxp load ~/.tmux/term1.yaml -y
for_window [instance="term1"] floating enable
for_window [instance="term1"] resize set 1920 700
for_window [instance="term1"] move position center
for_window [instance="term1"] move scratchpad
for_window [instance="term1"] border pixel 0
bindsym $mod+$crcum [instance="term1"] scratchpad show; move position center

set $term2 urxvt -name term2 -fn "xft:Noto Mono for Powerline:size=14"  -e tmuxp load ~/.tmux/term2.yaml -y
for_window [instance="term2"] floating enable
	for_window [instance="term2"] resize set 1920 700	
	for_window [instance="term2"] move position center
for_window [instance="term2"] move scratchpad
for_window [instance="term2"] border pixel 0
bindsym $alt+$crcum [instance="term2"] scratchpad show; move position center

bindsym $mod+$alt+$crcum exec $term1; exec $term2;

set $stats urxvt -name stats -fn "xft:Noto Mono for Powerline:size=14" -e htop
for_window [instance="stats"] floating enable
for_window [instance="stats"] resize set 1920 700
for_window [instance="stats"] move position center
for_window [instance="stats"] move scratchpad
for_window [instance="stats"] border pixel 0
exec --no-startup-id $stats 
bindsym $mod+$acute [instance="stats"] scratchpad show; move position center
bindsym $alt+$acute [instance="stats"] scratchpad show; move position center

