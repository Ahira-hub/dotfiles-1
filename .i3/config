############################################################################################################
#											MODIFIERS
############################################################################################################
set $mod mod4
set $alt mod1
set $esc Escape
set $ctl Control
set $ctr mod3
set $alg mod5

set $crcum dead_circumflex
set $acute dead_acute

set $ä adiaeresis
set $ö odiaeresis
set $ü udiaeresis




############################################################################################################
#											SETTINGS
############################################################################################################
gaps inner 15
gaps outer 5
floating_modifier $alt
workspace_auto_back_and_forth yes
popup_during_fullscreen smart
focus_follows_mouse yes
focus_on_window_activation focus
focus_wrapping yes
for_window [class=.*] border pixel 2




############################################################################################################
#											SHOTRCUTS
############################################################################################################
set $float_center floating enable, resize set 1920 780, move position center
set $scratch_move sticky enable, move scratchpad, border pixel 0
set $scratch_show scratchpad show, move position center

set $note urxvt -name note -fn "xft:Noto Mono for Powerline:size=12" -e tmuxp load ~/.tmux/note.yaml -y
set $term urxvt -name term -fn "xft:Noto Mono for Powerline:size=12" -e tmuxp load ~/.tmux/term.yaml -y




############################################################################################################
#											AUTOSTART
############################################################################################################
exec_always sysclient PalmDetect=1
exec_always synclient PalmDetect=1
exec_always synclient PalmMinWidth=4
exec_always synclient PalmMinZ=50
#exec_always syndaemon -i 0.2 -K -d
exec_always xrandr --output $monitor1 --primary --mode 3840x2160 --pos 0x0 --output $monitor2 --mode 1920x1080 --pos 3840x0
exec_always bash ~/.i3/polybar/launch
exec --no-startup-id compton --config ~/.i3/compton/.compton.conf
exec --no-startup-id udisksctl mount -b /dev/sda2
exec xrdb -load ~/.Xdefaults

exec xautolock -time 10 -locker ~/.i3/misc/blurlock
#exec bash ~/.i3/misc/wall ~/.assets/.bresilla/wallpapers/ 60
exec feh --bg-fill /home/trim/Dots/.assets/.wallpapers/character/wallhaven-575332.jpg 

exec --no-startup-id redshift -l 44.4949:11.3426 -b 1.0:0.8
exec --no-startup-id python /home/trim/.i3/layout

exec --no-startup-id pulseaudio
exec --no-startup-id playerctl
exec --no-startup-id xbacklight
exec --no-startup-id flameshot
exec --no-startup-id hass
#exec_always --no-startup-id nm-applet
#exec_always --no-startup-id blueman-applet
#exec_always --no-startup-id volti

exec --no-startup-id $note
exec --no-startup-id $term




############################################################################################################
#										MEDIA & FUNCTION KEYS
############################################################################################################
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 5+ unmute"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 5- unmute"

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#bindsym XF86MonBrightnessUp exec xbacklight -inc 10
#bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

bindsym XF86Search exec "find /media/trim/indrive | rofi -threads 0 -dmenu -i -p 'locate:' | xargs -r -0 xdg-open"

bindsym $alg+BackSpace exec bash ~/.scripts/play
bindsym $alg+space exec echo "cycle pause" > /home/trim/.config/mpv/control




############################################################################################################
#										FONTS & COLORS & FRAME
############################################################################################################
font pango:Noto Mono for Powerline 14

set_from_resource $accent accent #000000
set $black				#000000
set $grey				#373B41
set $white				#FFFFFF
set $red				#F10F09

#class						border		backgr.		text		split
client.focused				$accent		$accent		$black		$accent
client.focused_inactive		$grey		$grey		$white		$grey
client.unfocused			$grey		$grey		$white		$grey
client.urgent				$red		$red		$black		$red




############################################################################################################
##											WINDOWS
############################################################################################################
bindsym $mod+$esc kill
bindsym $alt+$esc kill

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+h focus left
bindsym $mod+k focus left
bindsym $mod+j focus down
bindsym $mod+l focus right

bindsym $alt+h move left
bindsym $alt+k move down
bindsym $alt+j move up
bindsym $alt+l move right

bindsym $alt+Left move left
bindsym $alt+Down move down
bindsym $alt+Up move up
bindsym $alt+Right move right

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $alt+Shift+Right resize shrink width 8 px or 8 ppt
bindsym $alt+Shift+Up resize grow height 8 px or 8 ppt
bindsym $alt+Shift+Down resize shrink height 8 px or 8 ppt
bindsym $alt+Shift+Left resize grow width 8 px or 8 ppt

bindsym $mod+Shift+Right resize shrink width 4 px or 4 ppt
bindsym $mod+Shift+Up resize grow height 4 px or 4 ppt
bindsym $mod+Shift+Down resize shrink height 4 px or 4 ppt
bindsym $mod+Shift+Left resize grow width 4 px or 4 ppt

bindsym F7 fullscreen toggle
bindsym $mod+F7 floating toggle
bindsym $alt+F7 floating toggle
bindsym $mod+$alt+F7 sticky toggle




