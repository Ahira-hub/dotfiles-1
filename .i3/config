assign [class="Nightly"] $workspace2
assign [class="Firefox"] $workspace7
assign [class="Mousepad"] $workspace9
assign [class="Code"] $workspace4
assign [class="gazeb"] $workspace5
assign [class="QGroundControl"] $workspace5
assign [class="obs"] $workspace6
assign [class="MPlayer"] $workspace1



