#exec bash ~/.i3/wall ~/.assets/.bresilla/wallpapers/ 60

bindsym $mod+Shift+r exec "xrdb -load ~/.Xdefaults"; reload; restart;
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b '  E X I T  ' 'i3-msg exit'"
bindsym $mod+Shift+b exec mplayer ~/.assets/.bresilla/bresilla.mp4
bindsym $mod+Shift+s exec bash ~/.i3/blurlock; exec xset -dpms s off



