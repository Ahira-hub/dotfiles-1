bindsym $mod+$alt+Ctrl+c exec mousepad ~/.i3/compton/.compton.conf
bindsym $mod+$alt+Ctrl+p exec mousepad ~/.i3/polybar/config
bindsym $mod+$alt+Ctrl+x exec mousepad ~/.Xdefaults



############################################################################################################
#										WALLPAPER & LOCKSCREEN
############################################################################################################
exec bash ~/.i3/wall ~/.bresilla/wallpapers/ 60
bindsym $mod+l exec bash ~/.i3/blurlock
exec "xautolock -time 10 -locker ~/.i3/blurlock"



bindsym $mod+b exec mplayer ~/.bresilla/bresilla.mp4
exec mplayer ~/.bresilla/bresilla.mp4 -nosound

############################################################################################################
#										 	SYSTEM
############################################################################################################
bindsym $mod+Shift+r exec "xrdb -load ~/.Xdefaults"; reload; restart;
bindsym $mod+r exec "xrdb -load ~/.Xdefaults"; reload; restart

bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b '  E X I T  ' 'i3-msg exit'"

exec_always ~/.i3/keyring
exec_always /usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh



############################################################################################################
#											MEDIA
############################################################################################################
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 5+ unmute"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 5- unmute"

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#bindsym XF86MonBrightnessUp exec xbacklight -inc 10
#bindsym XF86MonBrightnessDown exec xbacklight -dec 10

bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10



############################################################################################################
#										   SCRATCHPAD
############################################################################################################
set $dropdown urxvt -name dropdown -fn "xft:Noto Mono for Powerline:size=10" -e tmuxp load ~/.tmux/texas.yaml
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 1500 700
for_window [instance="dropdown"] move position center
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 0
exec --no-startup-id $dropdown 
bindsym $mod+$alt+Ctrl+$cir exec --no-startup-id $dropdown
bindsym $cir [instance="dropdown"] scratchpad show; move position center

set $math urxvt -name math -fn "xft:Noto Mono for Powerline:size=20" -e qalc
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 1500 700
for_window [instance="math"] move position center
for_window [instance="math"] move scratchpad
for_window [instance="math"] border pixel 0
exec --no-startup-id $math 
bindsym $alt+$cir [instance="math"] scratchpad show; move position center

set $stats urxvt -name stats -fn "xft:Noto Mono for Powerline:size=15" -e htop
for_window [instance="stats"] floating enable
for_window [instance="stats"] resize set 1500 700
for_window [instance="stats"] move position center
for_window [instance="stats"] move scratchpad
for_window [instance="stats"] border pixel 0
exec --no-startup-id $stats 
bindsym $mod+$cir [instance="stats"] scratchpad show; move position center



############################################################################################################
#										  LAYOUTS
############################################################################################################
set $4by2 urxvt -name 4by2 -fn "xft:Noto Mono for Powerline:size=12" -e tmuxp load ~/.tmux/4by2.yaml
assign [instance="4by2"] $workspace1
bindsym $mod+$alt+Ctrl+k exec $4by2 
