############################################################################################################
#											MODIFIERS
############################################################################################################
exec_always xmodmap -e "remove control = Control_R"
exec_always xmodmap -e "add Mod3 = Control_R"
exec_always xmodmap -e "clear lock"
exec_always xmodmap -e "keycode 66 = Escape"
exec_always setxkbmap -option caps:escape

exec_always synclient PalmDetect=1
exec_always synclient PalmMinWidth=4
exec_always synclient PalmMinZ=50 

set $mod mod4
set $alt mod1
set $esc Escape
set $ctl Control
set $ctr mod3
set $alg mod5

set $crcum dead_circumflex
set $acute dead_acute

set $ä adiaeresis
set $ö odiaeresis
set $ü udiaeresis



############################################################################################################
#											SYSTEM						-- MOD + SHIFT
############################################################################################################
gaps inner 15
gaps outer 5
floating_modifier $mod

