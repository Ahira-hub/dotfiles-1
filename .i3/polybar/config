[colors]
	accent = #ff77a6
	background = 		#A5000000
	background-alt = 	#E6000000
	foreground = 		#A5ffffff
	foreground-alt = 	#40ffffff
	;primary = 			${xrdb:accent}
	primary = 			${self.accent}
	alert = 			#bd2c40



[global/wm]
	margin-top = 5
	margin-bottom = 5



[settings]
	throttle-output = 5
	throttle-output-for = 10
	throttle-input-for = 30
	screenchange-reload = true
	
	barwidth = 100%
	barheigh = 48



[bar/top]
	monitor = ${env:MONITOR}
	monitor-strict = true
	dpi = 72
	bottom = false
	width = ${settings.barwidth}
	height = ${settings.barheigh}
	offset-x = 0
	offset-y = 0
	background = ${colors.background}
	foreground = ${colors.foreground}
	overline-size = 0
	overline-color = #f00
	underline-size = 2
	underline-color = #00f
	border-bottom-size = 0
	border-bottom-color = ${colors.background}
	spacing = 1
	padding-left = 0
	padding-right = 8
	module-margin-left = 4
	module-margin-right = 4
	font-0 = Bahnschrift:size=12;0
	font-1 = FontAwesome:pixelsize=14;-3
	font-2 = Font Awesome 5 Free:pixelsize=14;-3
	font-3 = Font Awesome 5 Free Solid:pixelsize=14;-3
	font-4 = Font Awesome 5 Brands:pixelsize=14;-3
	font-5 = unifont:size=14;0
	tray-position = right
	tray-padding = 4
	wm-restack = i3

	modules-left =  i3
	modules-center = docker system bandwidth rsync hotspot
	modules-right = wlan volume cpu memory battery date


[module/docker]
	type = custom/text
	content = DRY
	click-left = bash ~/.scripts/termop dry dry 1920 1080 960 48
	
[module/system]
	type = custom/text
	content = TOP
	click-left = bash ~/.scripts/termop htop htop 1920 1080 960 48

[module/bandwidth]
	type = custom/text
	content = NET
	click-left = bash ~/.scripts/termop bmon bmon 1920 1080 960 48
	
	
[module/rsync]
	type = custom/text
	content = SYC
	click-left = bash ~/.scripts/termop '~/.scripts/syncto /home/trim/Dots /home/trim' sync 1920 1080 960 48
	

[module/hotspot]
	type = custom/text
	content = HSP
	click-left = bash ~/.scripts/termop 'sudo hotspot wlp2s0 wlp2s0 algorithm dyhere024' hspot 1920 1080 960 48



[module/i3]
	type = internal/i3
	format = <label-state> <label-mode>
	index-sort = true
	wrapping-scroll = false
	strip-wsnumbers = false
	pin-workspaces = true
	enable-scroll = false
	label-mode-padding = 8
	label-mode-foreground = #000
	label-mode-background = ${colors.primary}
	label-focused = %name%
	label-focused-foreground= ${colors.primary}
	label-focused-background = ${colors.background-alt}
	label-focused-padding = 10
	label-unfocused = %name%
	label-unfocused-padding = 8
	label-urgent = %name%
	label-urgent-foreground= ${colors.alert}
	label-urgent-background = ${colors.background-alt}
	label-urgent-padding = 8
	label-visible = %name%
	label-visible-background = ${self.label-focused-background}
	label-visible-padding = ${self.label-focused-padding}



[module/cpu]
	format-label = internal/cpu
	format = <label>
	type = internal/cpu
	interval = 2
	label = " %percentage%%"


[module/memory]
	type = internal/memory
	interval = 2
	label = " %percentage_used%%"


[module/temperature]
	type = internal/temperature
	warn-temperature = 65

	format = <label> 
	format-warn = <label-warn>

	label = %temperature%
	label-warn = %temperature%!!!


	
[module/cputemp]
	type = custom/script
	exec = sensors | grep --max-count=1 "CPU Temperature:" | awk '{print substr($0,22,2)}'
	interval = 10
	label = " %output%°C"



[module/gputemp]
	type = custom/script
	exec = nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits
	interval = 10
	label = "GPU %output%°C"



[module/wlan]
	type = internal/network
	interface = wlp2s0
	interval = 3.0
	format-connected = <label-connected>
	format-connected-prefix = " "
	;label-connected = %local_ip%%essid%
	label-connected = %local_ip%
	label-disconnected = "%{A1:connman-gtk &:}%{A}"
	label-disconnected-foreground = #5b
	ramp-signal-0 = 
	ramp-signal-1 = 
	ramp-signal-2 = 
	ramp-signal-3 = 
	ramp-signal-4 = 
	ramp-signal-foreground = ${colors.foreground-alt}
	click-left = gksudo systemctl restart network-manager



[module/date]
	type = internal/date
	interval = 1.0
	date = %a %b %d, 
	time = %H:%M
	date-alt = %A, %d %B %Y
	time-alt = %H:%M:%S
	label = %date% %time%
	format =    <label>
	format-padding = 3



[module/volume]
	type = internal/volume
	format-volume = <ramp-volume><label-volume>
	format-muted = <label-muted>
	label-volume = %percentage%
	label-muted =   M
	label-muted-foreground = #aaa
	format-volume-padding = 3
	format-muted-padding = 3
	ramp-volume-0 = 
	ramp-volume-1 = 
	ramp-volume-2 = 
	ramp-headphones-0 = 



[module/battery]
	type = internal/battery
	battery = BAT0
	adapter = AC
	full-at = 98
	time-format = "%H%{F#92}%M%{F-}"
	label-discharging = %percentage% %time%
	format-charging = <animation-charging> <label-charging>
	format-discharging = <ramp-capacity> <label-discharging>
	format-full-prefix = " "
	format-full-prefix-foreground = ${colors.foreground}
	ramp-capacity-0 = 
	ramp-capacity-1 = 
	ramp-capacity-2 = 
	ramp-capacity-3 = 
	ramp-capacity-4 = 
	ramp-capacity-foreground = ${colors.foreground}
	animation-charging-0 = 
	animation-charging-1 = 
	animation-charging-2 = 
	animation-charging-3 = 
	animation-charging-4 = 
	animation-charging-foreground = ${colors.foreground}
	animation-charging-framerate = 750
